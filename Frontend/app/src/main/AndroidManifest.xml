<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="com.google.android.gms.permission.AD_ID"
        tools:node="remove" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TeamApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".MainAppActivity"
            android:exported="false"
            android:label="@string/title_activity_main_app"
            android:theme="@style/Theme.TeamApp" />
        <activity
            android:name=".auth.ForgotPasswordActivity"
            android:exported="false"
            android:label="@string/title_activity_forgot_password"
            android:theme="@style/Theme.TeamApp" />
        <activity
            android:name=".settings.SettingActivity"
            android:exported="false"
            android:label="@string/title_activity_setting"
            android:theme="@style/Theme.TeamApp" />
        <activity
            android:name=".searchThrough.SearchThroughActivity"
            android:exported="false"
            android:label="@string/title_activity_search_through"
            android:theme="@style/Theme.TeamApp" />
        <activity
            android:name=".profile.ProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.TeamApp" />
        <activity
            android:name=".profile.ProfileActivity.kt"
            android:exported="false"
            android:label="@string/title_activity_profile_activity.kt"
            android:theme="@style/Theme.TeamApp" />
        <activity
            android:name=".event.CreateEventActivity"
            android:exported="false"
            android:label="@string/title_activity_create_event"
            android:theme="@style/Theme.TeamApp" />
        <activity
            android:name=".auth.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TeamApp" />
        <activity
            android:name=".auth.RegisterActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TeamApp"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>