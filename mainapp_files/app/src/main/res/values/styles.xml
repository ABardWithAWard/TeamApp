<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Twój domyślny motyw aplikacji -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Dodaj tu inne ustawienia stylu aplikacji -->
    </style>

    <!-- Niestandardowy styl dla DatePickerDialog -->
    <style name="CustomDatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">#FFFF</item> <!-- Kolor główny dialogu -->
        <item name="colorAccent">#000000</item> <!-- Kolor akcentu -->
        <item name="android:textColorPrimary">#000000</item> <!-- Kolor tekstu -->
        <item name="android:datePickerDialogTheme">@style/CustomDatePickerTheme</item> <!-- Powiązanie z DatePicker -->
    </style>

    <!-- Styl dla TimePickerDialog -->
    <style name="CustomTimePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">#FFFF</item>
        <item name="colorAccent">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <!-- Inne elementy stylu -->
    </style>
</resources>